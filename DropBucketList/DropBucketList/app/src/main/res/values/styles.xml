<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@string/font_family</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_family</item>
    </style>

    <style name="DatePickerItemStyle">
        <item name="android:layout_width">@dimen/date_picker_shape_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_date_picker_item</item>
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:drawableBottom">@drawable/date_picker_down_normal</item>
        <item name="android:drawablePadding">@dimen/date_picker_text_view_drawable_padding</item>
        <item name="android:drawableTop">@drawable/date_picker_up_normal</item>
    </style>

    <style name="AddButtonStyle">
        <item name="android:background">@drawable/background_button_add_it</item>
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:paddingBottom">@dimen/button_add_a_drop_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/button_add_a_drop_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/button_add_a_drop_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/button_add_a_drop_vertical_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_add_a_drop</item>
        <item name="android:textSize">@dimen/button_add_a_drop_font_size</item>
    </style>

</resources>
