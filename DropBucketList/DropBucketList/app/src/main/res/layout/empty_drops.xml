<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="@dimen/image_view_logo_size"
            android:layout_height="@dimen/image_view_logo_size"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/image_view_logo_width"
            android:src="@drawable/logo_large"/>

        <Button
            android:id="@+id/button_add_a_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_logo"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/button_add_a_drop_margin"
            android:background="@drawable/background_button_add_it"
            android:fontFamily="@string/font_family"
            android:paddingBottom="@dimen/button_add_a_drop_vertical_padding"
            android:paddingLeft="@dimen/button_add_a_drop_horizontal_padding"
            android:paddingRight="@dimen/button_add_a_drop_horizontal_padding"
            android:paddingTop="@dimen/button_add_a_drop_vertical_padding"
            android:text="@string/string_add_a_drop"
            android:textAllCaps="false"
            android:textColor="@color/button_add_a_drop"
            android:textSize="@dimen/button_add_a_drop_font_size"/>

    </RelativeLayout>
</ScrollView>