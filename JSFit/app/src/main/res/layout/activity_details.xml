<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityDetails"
    android:background="#FF5252"
    android:id="@+id/background_details_main"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Anaerobic"
        android:id="@+id/text_view_exercise_type_title"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_exercise_type_symbol"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lift"
        android:padding="16dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mark It Complete!"
            android:id="@+id/textView11"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout"
            android:id="@+id/checkBox"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:paddingLeft="250dp"
            android:layout_marginBottom="5dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout"
            android:id="@+id/checkBox2"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:paddingLeft="250dp"
            android:layout_marginBottom="5dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout"
            android:id="@+id/checkBox3"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:paddingLeft="250dp"
            android:layout_marginBottom="5dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout"
            android:id="@+id/checkBox4"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:paddingLeft="250dp"
            android:layout_marginBottom="5dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout"
            android:id="@+id/checkBox5"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:paddingLeft="250dp"
            android:layout_marginBottom="5dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout"
            android:id="@+id/checkBox6"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:paddingLeft="250dp"
            android:layout_marginBottom="5dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout"
            android:id="@+id/checkBox7"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:paddingLeft="250dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</LinearLayout>
